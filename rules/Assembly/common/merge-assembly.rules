rule cap3:
    input:
        'Assembly/{type}.%s_preprocessed.1.fa' % IMP_ASSEMBLER,
        'Assembly/{type}.%s_unmapped.2.fa' % IMP_ASSEMBLER,
    output:
        'Assembly/{type}.assembly.merged.fa',
    shell:
        """
        NAME=Assembly/{wildcards.type}.assembly
        cap3 $NAME.cat.fa
        # Concatenate assembled contigs, singletons and rename the contigs
        cat $NAME.cat.fa.cap.contigs $NAME.cat.fa.cap.singlets | \
        awk '/^>/{{print \">contig_\" ++i; next}}{{print}}' > $NAME.merged.fa
        """
