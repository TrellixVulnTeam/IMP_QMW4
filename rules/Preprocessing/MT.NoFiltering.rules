rule MT_PREPROCESSING_NO_FILTER:
    log:
        P_LOG
    input:
        '%s/MT.R1.trimmed.rna_filtered.fq' % P_OUT,
        '%s/MT.R2.trimmed.rna_filtered.fq' % P_OUT,
        '%s/MT.SE.trimmed.rna_filtered.fq' % P_OUT
    output:
        '%s/MT.R1.preprocessed.fq' % P_OUT,
        '%s/MT.R2.preprocessed.fq' % P_OUT,
        '%s/MT.SE.preprocessed.fq' % P_OUT
    benchmark:
        "%s/benchmarks/MT_PREPROCESSING_NO_FILTER.json" % P_OUT
    shell:
        """
        ln -s {input[0]} {output[0]} && touch -h {output[0]}
        ln -s {input[1]} {output[1]} && touch -h {output[1]}
        ln -s {input[2]} {output[2]} && touch -h {output[2]}
        """
