rule download_librairies_files:
    output:
        "Report/lib/d3.min.js",
        "Report/lib/d3pie.min.js",
        "Report/lib/jquery-2.1.1.min.js",
        "Report/lib/jquery.cookie.min.js",
        "Report/lib/bootstrap.min.css",
        "Report/lib/bootstrap.min.js",
    shell:
        """
        wget https://raw.githubusercontent.com/mbostock/d3/master/d3.min.js -O Report/lib/d3.min.js
        wget https://raw.githubusercontent.com/benkeen/d3pie/0.1.3/d3pie/d3pie.min.js -O Report/lib/d3pie.min.js
        wget http://code.jquery.com/jquery-2.1.1.min.js -O Report/lib/jquery-2.1.1.min.js
        wget https://raw.githubusercontent.com/js-cookie/js-cookie/v2.0.3/src/js.cookie.js -O Report/lib/jquery.cookie.min.js
        wget https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css -O Report/lib/bootstrap.min.css
        wget https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js -O Report/lib/bootstrap.min.js
        """

rule local_librarie_files:
    output:
        'Report/lib/vizbin_logo.png',
        'Report/lib/IMP_logo.png',
        'Report/lib/imp.js',
        'Report/lib/imp.html',
    shell:
        """
        mkdir -p Report/lib
        cp {LIBDIR}/vizbin_logo.png {output[0]}
        cp {LIBDIR}/IMP_logo.png {output[1]}
        cp {LIBDIR}/imp.js {output[2]}
        cp {LIBDIR}/imp.html {output[3]}
        """
