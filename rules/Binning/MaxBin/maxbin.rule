rule maxbin:
    input:
       "Analysis/%s.vizbin.filtered.fa" % ASS,
       "Analysis/mg.assembly.contig_depth.txt"
    output:
       "Binning/MaxBin/maxbin_res.log"
    shell:
        """
        ## Create MaxBin dir
        mkdir -p Binning/MaxBin
        
        ## Run MaxBin
        MaxBin -fasta {input[0]} \
        -abund {input[1]} \
        -out maxbin_res \
        -thread {THREADS} 
        """
