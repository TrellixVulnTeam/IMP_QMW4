        "Analysis/%s.vizbin.with-contig-names.points" % ASS,
        "Binning/MaxBin/maxbin_res.summary",
        "Binning/MaxBin/maxbin_contig2bin.txt",
        "Analysis/%s.assembly.length.txt" % ASS
