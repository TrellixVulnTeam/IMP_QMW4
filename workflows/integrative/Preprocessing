# include rules for the Preprocessing part of the workflow

# data input preparation
include:
    "../../rules/data_input.rules"

# include only if user don't skip preprocessing
if not config['skip_preprocessing']:
    # trimming rules
    include:
        "../../rules/trimming.rules"
    # filtering rna for mt data
    include:
        "../../rules/rna.filtering.rules"

    # include filtering rule or not
    if config['preprocessing_filtering']:
        include:
            "../../rules/filtering.rules"
    else:
        include:
            "../../rules/no-filtering.rules"

# master command
rule PREPROCESSING:
    input:
        expand([
        '{step}/{type}.r1.preprocessed.fq',
        '{step}/{type}.r2.preprocessed.fq',
        '{step}/{type}.se.preprocessed.fq'], type=TYPES, step='Preprocessing')
    output:
        touch('preprocessing.done')
